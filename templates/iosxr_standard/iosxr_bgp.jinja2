router bgp {{ device.bgp.bgp_as }}
{% if device.bgp.router_id %}
 bgp router-id {{ device.bgp.router_id }}
 address-family ipv4 unicast
 !
 address-family vpnv4 unicast
 !
 address-family ipv4 mdt
 !
{% endif %}
{% for neighbor in device.bgp.neighbors %}
{% if neighbor.note %}
{% set note = neighbor.note %}

{% include "common/note.jinja2" %}

{% endif %}
 neighbor {{ neighbor.neighbor }}
  remote-as {{ neighbor.neighbor_as }}
  timers {{ neighbor.neighbor_timers.keep_alive }} {{ neighbor.neighbor_timers.hold_time }}
  description {{ neighbor.neighbor_description }}
  address-family ipv4 unicast
   {% if neighbor.neighbor_route_policies %}
       {% if neighbor.neighbor_route_policies.route_policy_in %}
   route-policy {{ neighbor.neighbor_route_policies.route_policy_in }} in
       {% endif %}
       {% if neighbor.neighbor_route_policies.route_policy_out %}
   route-policy {{ neighbor.neighbor_route_policies.route_policy_out }} out
       {% endif %}
   {% endif %}
   soft-reconfiguration inbound
  !
  address-family vpnv4 unicast
   {% if neighbor.neighbor_route_policies %}
       {% if neighbor.neighbor_route_policies.route_policy_in %}
   route-policy {{ neighbor.neighbor_route_policies.route_policy_in }} in
       {% endif %}
       {% if neighbor.neighbor_route_policies.route_policy_out %}
   route-policy {{ neighbor.neighbor_route_policies.route_policy_out }} out
       {% endif %}
   {% endif %}
  !
  address-family ipv4 mdt
   {% if neighbor.neighbor_route_policies %}
       {% if neighbor.neighbor_route_policies.route_policy_in %}
   route-policy {{ neighbor.neighbor_route_policies.route_policy_in }} in
       {% endif %}
       {% if neighbor.neighbor_route_policies.route_policy_out %}
   route-policy {{ neighbor.neighbor_route_policies.route_policy_out }} out
       {% endif %}
   {% endif %}
{% endfor %}
{% for neighbor in device.bgp.vrf_neighbors %}
 vrf {{ neighbor.neighbor_vrf }}
  {% if neighbor.neighbor_rd %}
  rd {{ neighbor.neighbor_rd }}
  address-family ipv4 unicast
   redistribute connected
  !
  {% endif %}
  neighbor {{ neighbor.neighbor }}
   remote-as {{ neighbor.neighbor_as }}
   timers {{ neighbor.neighbor_timers.keep_alive }} {{ neighbor.neighbor_timers.hold_time }}
   description {{ neighbor.neighbor_description }}
   address-family ipv4 unicast
    send-community-ebgp
    {% if neighbor.neighbor_route_policies %}
        {% if neighbor.neighbor_route_policies.route_policy_in %}
    route-policy {{ neighbor.neighbor_route_policies.route_policy_in }} in
        {% endif %}
        {% if neighbor.neighbor_route_policies.route_policy_out %}
    route-policy {{ neighbor.neighbor_route_policies.route_policy_out }} out
        {% endif %}
    {% endif %}
    soft-reconfiguration inbound
{% endfor %}
