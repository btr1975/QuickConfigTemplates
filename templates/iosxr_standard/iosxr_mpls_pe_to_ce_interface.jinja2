{% for interface in device.mpls_pe_to_ce_interfaces %}
{% if interface.note %}
{% set note = interface.note %}

{% include "common/note.jinja2" %}

{% endif %}
interface {{ interface.interface }}
 description {{ interface.description }}
 vrf {{ interface.vrf }}
 {% if not interface.tag %}
 cdp
 {% endif %}
 {% if interface.remove %}
 no ipv4 address
 {% else %}
 ipv4 address {{ interface.ip|u_ip_address }} {{ interface.mask|mask_standard }}
 {% endif %}
 {% if interface.tag %}
 encapsulation dot1q {{ interface.tag }}
 {% endif %}

{% if interface.multicast %}
router pim
 vrf {{ interface.vrf }}
  address-family ipv4
   interface {{ interface.interface }}
   {% if interface.remove %}
    disable
   {% else %}
    enable
   {% endif %}

multicast-routing
 vrf {{ interface.vrf }}
  address-family ipv4
   interface {{ interface.interface }}
   {% if interface.remove %}
    disable
   {% else %}
    enable
   {% endif %}
{% endif %}

{% endfor %}
